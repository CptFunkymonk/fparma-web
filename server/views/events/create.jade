extends ../layout

block head
	link(href='/vendor/picker.min.css', rel='stylesheet', media='all')    

block content
	h1 Create new event
	form#create.ui.form
		.ui.two.column.stackable.grid.segment
			.two.column.row
				.field.column
					label Event name
					input(type='text', name='name')
					.inline.fields
						.field
							.ui.radio.checkbox.time-local
								input(type='radio', name='mission-type', value='CO')
								label CO
						.field
							.ui.radio.checkbox.time-utc
								input(type='radio', name='mission-type', value='TVT')
								label TvT
			.two.column.row
				.field.column
					label Author(s)
					input(type='text', name='author')
			.four.column.row
				.field.column
					label Date
					input#create-date(type='text')
				.field.column
					label Time
					input#create-time(type='text')
					.inline.fields
						.field
							.ui.radio.checkbox
								input(type='radio', name='user-time', value='local')
								label Local
						.field
							.ui.radio.checkbox
								input(type='radio', name='user-time', value='utc')
								label UTC
	h1 Slots
	div
		button#js-slots-sqm.ui.icon.button
			i.cloud.upload.icon
			span Upload SQM
		input#js-sqm-upload(name='file' type='file', style="display:none", accept='.sqm')
		
		button#js-slots-manual.ui.icon.button
			i.write.icon
			span Enter manually
		button#js-slots-reset.ui.reset.icon.button
			i.repeat.icon
			span Reset slots
	div
		p#js-sqm-error.ui.compact.error.message.hidden
	

	.ui.two.column.stackable.grid.segment
		.two.column.row
			.field.column
				h1 hi
block tail
	script(src='/vendor/moment.min.js')
	script(src='/vendor/picker.min.js')
