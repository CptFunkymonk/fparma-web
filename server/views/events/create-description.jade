.ui.two.column.stackable.grid
  .two.column.row
    .field.column
      label Event name
      input.js-event-name(type='text', name='name' placeholder="Operation FPARMA" autofocus)
      .inline.fields.js-event-type
        .field
          .ui.radio.checkbox
            input(type='radio', checked="" name='type', value='CO')
            label
              b CO
        .field
          .ui.radio.checkbox
            input(type='radio', name='type', value='TVT')
            label
              b TvT
  .two.column.row
    .field.column
      label Event description
      textarea(rows=6, name='description' placeholder="Info on the event")
  .two.column.row
    .field.column
      label Author(s)
      input.js-event-authors(type='text', name='author' placeholder="User1, user2")
  .four.column.row
    .field.column
      label Date
      input#create-date(type='text')
    .field.column
      label Time (local)
      input#create-time(type='text')
  .field.column(style='padding-top: 0')
    p#js-time