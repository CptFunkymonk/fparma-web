extends layout

//block head

block content
  .ui.segment.container
    h1.ui.dividing.header Media
      if (locals.user && locals.user.admin)
          a.ui.primary.button(style="float: right", href='/media/approval') Approval
    .ui.centered.grid
      .row
        .ui.active.button Screenshots
        .ui.disabled.button Videos
    .ui.centered.grid
      -var i = 0;
      while (images.length)
          if (i % 4 == 0)
            .ui.divided.doubling.stackable.four.column.row
              each n in [1, 2, 3, 4]
                if (images.length)
                  .column.middle.aligned
                      img.ui.centered.rounded.image(src=images.pop().url)
